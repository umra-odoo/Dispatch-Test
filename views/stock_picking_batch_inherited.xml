<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_batch_view" model="ir.ui.view">
        <field name="name">stock.picking.batch.form</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="dock_id"/>
                <field name="vehicle_id"/>
                <field name="vehicle_category_id"/>
                <field name="weight" invisible="not vehicle_category_id" widget="progressbar"/>
                <field name="volume" invisible="not vehicle_category_id" widget="progressbar"/>
            </xpath>
        </field>
    </record>




    <record id="menu_stock_picking_batch_graph" model="ir.ui.menu">
        <field name="name">Stock Picking Batch Graph</field>
        <field name="action" ref="stock_picking_batch.stock_picking_batch_action"/>
        <field name="sequence" type="int">10</field>
        <field name="parent_id" ref="stock.menu_stock_root"/>
        <field name="groups_id" eval="[(6, 0, [base.group_user.id])]"/>
    </record>

    <record id="stock_picking_batch.stock_picking_batch_action" model="ir.actions.act_window">
        <field name="name">Stock Picking Batch</field>
        <field name="res_model">stock.picking.batch</field>
        <field name="view_mode">tree,kanban,form,graph</field>
        <field name="context">
            {
                'graph_mode': 'bar',
                'graph_groupbys': ['scheduled_date:day', 'category_id'],
            }
        </field>
        <field name="views">
            <field name="graph" eval="[(False, 'graph')]"/>
        </field>
        <field name="graph_measure" eval="'volume,weight,transfer_count,lines_count'"/>
    </record>

</odoo>